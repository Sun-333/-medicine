<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 1 配置类和表对应 
		class标签
		name属性：实体类全路径
		table属性：数据库表名称
	-->
	<class name="cn.cqupt.entity.Illness" table="illness">
		<id name="illnessId" column="IllnessId">
			<generator class="native"></generator>
		</id>
		<!-- 配置病情信息 -->
		<property name="illnessName" column="IllnessName"></property>
	</class>
</hibernate-mapping>





